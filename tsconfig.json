{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "./types/global.d.ts"]
  },
  "include": ["src/**/*.ts", "types/global.d.ts"],
  "exclude": ["node_modules"]
}
